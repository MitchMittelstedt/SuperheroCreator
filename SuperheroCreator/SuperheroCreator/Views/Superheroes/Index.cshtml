@model IEnumerable<SuperheroCreator.Models.Superhero>

@{
    ViewBag.Title = "Index";
}

<h2>List of Superheroes</h2>

<img src="~/Content/batman-image.jpg" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlterEgoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimarySuperheroAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondSuperheroAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catchphrase)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlterEgoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimarySuperheroAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondSuperheroAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catchphrase)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
